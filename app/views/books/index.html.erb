<a href="/books/new">Add book</a>


<table>
    <tr>
        <td>id</td>
        <td>title</td>
        <td>price</td>
        <td>update</td>
        <td>delete</td>
    </tr>

    <% @books.each do |book| %>
        <tr>
            <td><%= link_to book.id, book_path(book.id) %></td>
            <td><%= book.title %></td>
            <td><%= book.price %></td>
            <td><%= link_to 'edit', edit_book_path(book.id) %></td>
            <td><%= link_to 'delete', book_path(book.id), method:'delete', data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
</table>



